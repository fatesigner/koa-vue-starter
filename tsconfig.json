{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": false,
    //"outDir": "bin",
    "diagnostics": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "lib": [
      "es5",
      "es6",
      "es2015",
      "es2015.promise",
      "dom"
    ],
    "moduleResolution": "node",
    "noStrictGenericChecks": true,
    "noImplicitAny": false,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "rootDir": "./src",
    "module": "esnext",
    "target": "es5",
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "typings/**/*.d.ts",
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/__tests__/*.ts"
  ]
}
